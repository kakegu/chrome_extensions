{
    "manifest_version": 2,
    "name": "trustnote_wallet",
    "version": "1.0.0",
    "description": "trustnote_wallet",
    "icons":{
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "browser_action":{
        "default_icon": "img/icon.png",
        "default_title": "trustnote_wallet",
        "default_popup": "index.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions":[
        "contextMenus",
        "tabs",
        "notifications",
        "webRequest",
        "webRequestBlocking",
        "storage",
        "http://*/*",
        "https://*/*"
    ],
    //"web_accessible_resources": ["js/inject.js"],
    "homepage_url": "https://github.com/fusionwallet/chrome_extensions"
}